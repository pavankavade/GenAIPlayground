@{
    ViewBag.Title = "Home Page";
}

<main>
    <div class="container">
        <div class="row">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header">
                        <div class="d-flex justify-content-between align-items-center">
                            Chat
                            <button class="btn btn-sm btn-secondary" type="button" onclick="clearChat()">Clear</button>
                        </div>
                    </div>
                    <div class="card-body">
                        <div id="chatbox"></div>
                        <div class="input-group">
                            <textarea id="userinput" class="form-control" placeholder="Enter user message..." rows="1"></textarea> <div class="input-group-append">
                                <button class="btn btn-primary" type="button" onclick="sendMessage()">Run (Ctrl + ⏎)</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card">
                    <div class="card-header">Configuration</div>
                    <div class="card-body">
                        <div class="form-group">
                            <label for="modelDropdown">Model:</label>
                            <select class="form-control" id="modelDropdown">
                                <option>gpt-4o</option>
                                <option>To-Do</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="systemprompt">System Prompt:</label>
                            <textarea id="systemprompt" class="form-control" rows="4" placeholder="Enter system instructions"></textarea>
                            <div class="mt-2">
                                <button class="btn btn-outline-secondary" type="button" onclick="saveSystemPrompt()">Save</button>
                                <button class="btn btn-outline-secondary ml-2" type="button" onclick="setDefaultPrompt()">Default</button>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="pastMessages">Past Messages:</label>
                            <input type="range" class="custom-range" id="pastMessages" min="0" max="50" value="30">
                            <span id="pastMessagesValue">30</span>
                        </div>
                        <div class="form-group">
                            <label>Prompt Token Count:</label>
                            <div id="promptTokenCount"></div>
                            <label>Completion Token Count:</label>
                            <div id="completionTokenCount"></div>
                            <label>Total Token Count:</label>
                            <div id="totalTokenCount">0 / 1,28,000</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>